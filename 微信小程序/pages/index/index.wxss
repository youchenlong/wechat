/* pages/index/index.wxss */
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.header{
  height: 200rpx;
  width: 90%;
  margin: 0 auto;
  background-color: skyblue;
}
.header swiper{
  height: 200rpx;
  width: 100%;
}
.header image{
  width: 100%;
  height: 200rpx;
}
.body{
  height: 800rpx;
  width: 100%;
  background-color: skyblue;
  margin: 10rpx 0;
}
.search{
  height: 100rpx;
  width: 100%;
  background-color: blue;
}
.search input{
  display: block;
  height: 60rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 130rpx;
  border: 2rpx yellow solid;
  border-radius: 10rpx;
}
.search button{
  float: left;
  margin: 20rpx 20rpx;
}
.menu{
  width: 100%;
  height: 100rpx;
  background-color: green;
}
.menu-item{
  display: inline-block;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 50rpx;
  margin-top: 15rpx;
  border: 2rpx yellow solid;
  border-radius: 10rpx;
}
.main{

}
.footer{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background-color: green;
}